                <li class="nav-item">
                    <a id="sidebarCollapse" class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">All Products</a>
                </li>
               
               </ul>
              
           
            <form asp-controller="Product" asp-action="SearchResults" class="form-inline">
                <div class="d-inline-flex">
                    <input name="searchTerm" id="searchBar" class="form-control" type="search" placeholder="Search" aria-label="Search">
                    <button id="BtnSearch" class="btn btn-outline-dark rounded-pill mx-2" type="submit">Search</button>
                </div>
            </form>
            <ul class="nav navbar-nav">
                <li class="active">
                   
                    <a href="@Url.Action("MyOrder", "Product")" class="btn btn-outline-dark rounded-pill">
                        <i class="fa fa-shopping-cart" style="color:gray"></i><span class="badge">@contextAccessor.HttpContext.Session.GetString("count")</span>
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li>
                    @{
                        string userName = contextAccessor.HttpContext.Session.GetString("username");
                        if (userName == null)
                        {
                            <span class="nav-item dropdown">
                                <a class="nav-link text-dark" data-toggle="dropdown" href="#">
                                    <i class="fa fa-regular fa-user"></i>
                                    <div class="dropdown-menu px-4">

                                        <a class="nav-item" asp-area="" asp-controller="Login" asp-action="Index">Login</a>

                                    </div>
                                </a>
                            </span>
                        }
                        else
                        {
                            <span class="nav-item dropdown">
                                <a class="nav-link text-dark" data-toggle="dropdown" href="#">
                                    <text><i class="fa fa-regular fa-user"></i>@userName</text>
                                    <div class="dropdown-menu px-3">
                                        <a class="dropdown-item" asp-action="LogOut" asp-controller="Login" asp-area="">Log Out</a>
                                        <a class="dropdown-item" href="/Home/Account">Account</a>
                                    </div>
                                </a>
                            </span>

                        }
                    }


                </li>

            </ul>

        </div>
    </div>
</nav>
